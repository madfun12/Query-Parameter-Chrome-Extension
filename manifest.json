{
    "manifest_version": 3,
    "name": "Toggle Local Theme",
    "version": "1.0",
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon-off.png",
        "48": "icon-off.png",
        "128": "icon-off.png"
    },
    "action": {
        "default_popup": "",
        "default_icon": {
            "16": "icon-off.png",
            "48": "icon-off.png",
            "128": "icon-off.png"
        }
    }
}
